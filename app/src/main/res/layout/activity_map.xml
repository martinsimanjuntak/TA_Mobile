<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Maps.MapActivity">
    <fragment
        android:id="@+id/mapNearBy"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:background="@drawable/radius_stroke_blue"
        android:layout_below="@+id/rvToolbar"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/route_name_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Route Ajibata-Amabarita"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:id="@+id/liner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/route1"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rute 1"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Balige - Pelabuhan Ajibata "
                android:textStyle="bold"
                android:gravity="right"
                android:textSize="15dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/duration1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner_1"
            android:layout_margin="1dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_duration1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 jam 30 menit"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/distance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  30 KM"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/duration1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/route2"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rute 2"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ajibata-Ambarita "
                android:textStyle="bold"
                android:gravity="right"
                android:textSize="15dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/duration2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner_2"
            android:layout_margin="1dp"
            >
            <TextView
                android:id="@+id/text_duration2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="1 Jam"
                android:gravity="end"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/liner_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/duration2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/route3"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rute 3"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ambarita - Patung Tari Sigale-gale"
                android:textStyle="bold"
                android:gravity="right"
                android:textSize="15dp"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/duration3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner_3"
            android:orientation="horizontal"
            android:gravity="end"
            >
            <TextView
                android:id="@+id/text_duration3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 jam 30 menit"
                />
            <TextView
                android:id="@+id/distance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  30KM"
                />

        </LinearLayout>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text=" TOTAL Perjalanan : "
        />
        <TextView
            android:id="@+id/total_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2jam 30 menit"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/total_distance"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20KM"
            android:textStyle="bold"
            />
</LinearLayout>

</LinearLayout>